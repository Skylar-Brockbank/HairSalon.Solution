@{
    Layout = "_Layout";
}
@using HairSalon.Models;

@if(@Model.Count == 0)
{
  <h1>There are no stylists to show</h1>
}else{
  <h1>All Stylists</h1>
}

@foreach(Stylist s in Model)
{
  <li>@Html.ActionLink($"{s.Name}","Details", new {id = s.StylistId})</li>
}

@Html.ActionLink("Add a new Stylist", "Create", "Stylist")
